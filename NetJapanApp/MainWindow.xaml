<Window x:Class="NetJapanApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetJapanApp" Height="428" Width="583" ResizeMode="NoResize" Icon="assets/imgs/backup.ico">
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Uniform" ImageSource="assets/imgs/backup.jpg"/>
        </Grid.Background>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="NetJapan Application" VerticalAlignment="Top" Foreground="#FF9E0000" FontSize="24" RenderTransformOrigin="0.5,0.5" FontWeight="Bold">
            <TextBlock.Effect>
                <DropShadowEffect Color="#FF8B7777" ShadowDepth="2"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="closeBtn" Content="Close" HorizontalAlignment="Center" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="100" Height="24" Click="Button_Click"/>

    </Grid>
</Window>
